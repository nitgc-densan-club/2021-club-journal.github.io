{
    "language": "ja",
    "title": "縁日ゲームの説明",
    "description": "縁日ゲームはどのようにして動いているのでしょうか?",
    "plugins": [
    	"expand-active-chapter",
    	"collapsible-chapters",
    	"prism", "-highlight",
    	"copy-code-button",
    	"hide-published-with",
    	"anchors",
    	"intopic-toc",
    	"back-to-top-button",
    	"hints",
    	"git-author"
    ],
    
    "pluginsConfig": {
        "prism": {
            "css": [
                "prismjs/themes/prism-solarizedlight.css"
            ]
        },
		"git-author":{
              "position": "bottom",
              "modifyTpl": "最終変更者 {user} {timeStamp}",
              "createTpl": "作成者 {user} {timeStamp}",
              "timeStampFormat": "YYYY-MM-DD HH:mm:ss"
          }
    }
